@model IEnumerable<ProductMVC.Models.Product>

@{
    ViewBag.Title = "UserIndex";
}

<h2>Produkter</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleNumber)
        </td>
        <td>
            @*@Html.ActionLink("Lägg till i Kundvagn", "Edit", new { id=item.ID }) |*@
            @Html.ActionLink("Detaljer", "Details", new { id=item.ID }) 

        </td>
    </tr>
}

</table>
